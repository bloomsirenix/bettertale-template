{
  "permissions": {
    "bettertale.admin.config": {
      "description": "Allows access to Bettertale configuration menus",
      "default": "op"
    },
    "bettertale.servers.menu": {
      "description": "Allows access to server selection menu",
      "default": "true"
    },
    "bettertale.servers.add": {
      "description": "Allows adding new servers to the menu",
      "default": "op"
    },
    "bettertale.servers.remove": {
      "description": "Allows removing servers from the menu",
      "default": "op"
    },
    "bettertale.servers.edit": {
      "description": "Allows editing server configurations",
      "default": "op"
    },
    "bettertale.events.toggle": {
      "description": "Allows enabling/disabling event hooks",
      "default": "op"
    },
    "bettertale.reload": {
      "description": "Allows reloading Bettertale configurations",
      "default": "op"
    },
    "bettertale.command.send": {
      "description": "Allows using the send command to connect to servers",
      "default": "op"
    },
    "bettertale.command.bettertale": {
      "description": "Allows using the main Bettertale command",
      "default": "true"
    },
    "btessentials.command.towns": {
      "description": "Allows access to basic town commands",
      "default": "true"
    },
    "btessentials.command.towncreate": {
      "description": "Allows creating new towns",
      "default": "true"
    },
    "btessentials.command.towninfo": {
      "description": "Allows viewing town information",
      "default": "true"
    },
    "btessentials.command.townjoin": {
      "description": "Allows joining towns",
      "default": "true"
    },
    "btessentials.command.townleave": {
      "description": "Allows leaving towns",
      "default": "true"
    },
    "btessentials.command.towninvite": {
      "description": "Allows inviting players to town (mayor only)",
      "default": "op"
    },
    "btessentials.command.townkick": {
      "description": "Allows kicking players from town (mayor only)",
      "default": "op"
    },
    "btessentials.command.towndelete": {
      "description": "Allows deleting towns (mayor only)",
      "default": "op"
    },
    "btessentials.command.townsetspawn": {
      "description": "Allows setting town spawn (mayor only)",
      "default": "op"
    },
    "btessentials.command.townspawn": {
      "description": "Allows teleporting to town spawn (members only)",
      "default": "true"
    },
    "btessentials.command.townperm": {
      "description": "Allows managing town permissions (mayor only)",
      "default": "op"
    }
  },
  "groups": {
    "admin": {
      "permissions": [
        "bettertale.admin.config",
        "bettertale.servers.add",
        "bettertale.servers.remove",
        "bettertale.servers.edit",
        "bettertale.events.toggle",
        "bettertale.reload",
        "bettertale.command.send",
        "bettertale.command.bettertale",
        "bettertale.servers.menu",
        "btessentials.command.towns",
        "btessentials.command.towncreate",
        "btessentials.command.towninfo",
        "btessentials.command.townjoin",
        "btessentials.command.townleave",
        "btessentials.command.towninvite",
        "btessentials.command.townkick",
        "btessentials.command.towndelete",
        "btessentials.command.townsetspawn",
        "btessentials.command.townspawn",
        "btessentials.command.townperm"
      ],
      "default": false
    },
    "player": {
      "permissions": [
        "bettertale.servers.menu",
        "bettertale.command.send",
        "bettertale.command.bettertale",
        "btessentials.command.towns",
        "btessentials.command.towncreate",
        "btessentials.command.towninfo",
        "btessentials.command.townjoin",
        "btessentials.command.townleave",
        "btessentials.command.townspawn"
      ],
      "default": true
    }
  }
}